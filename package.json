{
  "name": "aceleracao-global-dev-24",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=8.5.5",
    "node": ">=16.13.0"
  },
  "packageManager": "yarn@1.22.10",
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  }
}
